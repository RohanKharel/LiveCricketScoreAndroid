<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSearch"
        android:layout_width="408dp"
        android:layout_height="179dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSearch">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtMatchDetails"
                android:layout_width="339dp"
                android:layout_height="22dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="MatchDetails"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="116dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="21dp"
                android:text="Country1"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMatchDetails" />

            <TextView
                android:id="@+id/txtOdirun"
                android:layout_width="119dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:text="Country2"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtName" />

            <TextView
                android:id="@+id/txtRun1"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="25dp"
                android:text="Run1"
                app:layout_constraintStart_toEndOf="@+id/txtName"
                app:layout_constraintTop_toBottomOf="@+id/txtMatchDetails" />

            <TextView
                android:id="@+id/txtOver1"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="27dp"
                android:text="over1"
                app:layout_constraintStart_toEndOf="@+id/txtRun1"
                app:layout_constraintTop_toBottomOf="@+id/txtMatchDetails" />

            <TextView
                android:id="@+id/txtRun2"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:text="run2"
                app:layout_constraintStart_toEndOf="@+id/txtOdirun"
                app:layout_constraintTop_toBottomOf="@+id/txtRun1" />

            <TextView
                android:id="@+id/txtOver2"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="13dp"
                android:text="Over2"
                app:layout_constraintStart_toEndOf="@+id/txtRun2"
                app:layout_constraintTop_toBottomOf="@+id/txtOver1" />

            <TextView
                android:id="@+id/txtTarget"
                android:layout_width="162dp"
                android:layout_height="31dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="16dp"
                android:text="Target"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/txtStartdetail"
                android:layout_width="217dp"
                android:layout_height="23dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="2dp"
                android:text="Result"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
