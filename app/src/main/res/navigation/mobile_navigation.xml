<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.livecricketscore.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_upcomingmatches"
        android:name="com.example.livecricketscore.ui.upcomingmatches.UpcomingmatchesFragment"
        android:label="@string/title_upcomingmatches"
        tools:layout="@layout/fragment_upcomingmatches" />

    <fragment
        android:id="@+id/navigation_category"
        android:name="com.example.livecricketscore.ui.category.CategoryFragment"
        android:label="@string/title_category"
        tools:layout="@layout/fragment_category" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.livecricketscore.ui.searchFragment.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/search_fragment" />
</navigation>